<div class="row">
	<div class="col-xs-1">
	</div>
	<div class="col-xs-2">
		<h2>マイページ</h2>
		<%= render 'publics/end_users/profile', end_user: @end_user %>
		<!--同コントローラーのviewで表示ならusersは省略可 -->
	</div>
	<div class="col-xs-5">
		<p>投稿タイトル一覧</p>
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th></th>
					<th>シリーズ名</th>
					<th>Title</th>
					<th>Opinion</th>
					<th colspan="4"></th>
				</tr>
			</thead>

			<tbody>
		<% @novels.each do |novel| %>
				<tr>
					<td>
						<%= link_to publics_end_user_path(novel.end_user) do %>
						<%= attachment_image_tag(novel.end_user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
						<% end %>
					</td>
					<td><%= link_to publics_series_novel_path(novel.series_novel) do %>
						<%= novel.series_novel.title%>
							<% end %>
						</td>
					<td><%= link_to novel.title, publics_novel_path(novel), class: "novel_#{novel.id}" %></td>
					
				</tr>
				<% end %>
				</tbody>
		</table>
	</div>

</div>

