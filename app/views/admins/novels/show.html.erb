<div class="row">
	<div class="col-xs-3">

		<h2>end_user info</h2>
		<%= render 'admins/end_users/profile', end_user: @novel.end_user %>


	</div>

	<div class="col-xs-9">
		<h2>novel detail</h2>
          <div class="row">
						<%= link_to admins_end_user_path(@novel.end_user) do %>
							<%= attachment_image_tag(@novel.end_user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %>
							<%= @novel.end_user.name %>
						<% end %>
					</div>
					<div>
          <%= @novel.title %>
          </div>
          <div><%= @novel.body %></div>

	</div>
</div>

