<section class="slice slice-lg sct-color-1">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">

                <div class="form-user style-1 rounded has-shadow-1">
                    <div class="form-header text-center">
  <h2 class="section-ttl">新規会員登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render 'layouts/error_messages', resource: @end_user %>
    <table class="customer_info customer_form">
      <thead>
        <th></th>
        <th></th>
        <th></th>
      </thead>
      <tbody>
        <tr>
          <td><%= f.label :name, "ユーザー名", class: "end_user_name" %> 
          </td><td><%= f.text_field :name, autofocus: true,placeholder:"名前" %></td>
        </tr>
        <tr>
          <td><%= f.label :email, "メールアドレス" %></td>
          <td colspan="2"><%= f.email_field :email, autocomplete: "email",placeholder:"メールアドレス" %></td>
        </tr>
        <tr>
          <td><%= f.label :year, "生年" %><%= f.label :month , "月" %><%= f.label :day, "日" %></td>
          <td><%= f.text_field :year, autocomplete: "year",placeholder:"西暦" %>
          <br><%= f.text_field :month, autocomplete: "month",placeholder:"月" %>
          <br><%= f.text_field :day, autocomplete: "day",placeholder:"" %></td>
        </tr>
        <tr>
          <td><%= f.label :password, "パスワード(#{@minimum_password_length}文字以上)" %></td>
          <td colspan="2"><%= f.password_field :password, autocomplete: "new-password" %></td>
        </tr>
        <tr>
          <td><%= f.label :password_confirmation, "パスワード再入力" %></td>
          <td colspan="2"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
        </tr>
        <tr>

          <td colspan="2"><br><%= f.submit "新規登録", class: "btn btn-success" %></td>
        </tr>
      </tbody>
    </table>
  <% end %>

  <h2 class="section-ttl">既に登録済みの方</h2>
  <p><%= link_to "こちら", new_end_user_session_path, class: "underline" %>からログインしてください。</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

